[Unit]
Description=Weather collection service
Documentation=https://github.com/bwolf/weather-collector
After=network.target

[Service]
User=weather-collector
Environment='STDOUT=/dev/null'
Environment='STDERR=/dev/null'
ExecStart=/bin/sh -c "exec /usr/bin/weather-collector >>${STDOUT} 2>>${STDERR}"
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
KillMode=control-group

[Install]
WantedBy=multi-user.target
Alias=weather-collector.service
